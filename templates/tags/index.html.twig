{% extends 'sidebar.html.twig' %}

{% block title %}Tags index{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-12">
            <h1 class="text-center">Tags index</h1>
        </div>
    </div>

    <div class="row mt-1 mb-5">
        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
            <a class="btn btn-outline-success" href="{{ path('app_tags_new') }}">Create new</a>
        </div>
    </div>
    <div class="row">
        <table class="table table-hover">
            <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">First</th>
                <th scope="col">Options</th>
            </tr>
            </thead>
            <tbody>
            {% for tag in tags %}
                <tr>
                    <th scope="row">{{ tag.id }}</th>
                    <td>{{ tag.title }}</td>
                    <td>
                        <a class="btn btn-outline-primary" href="{{ path('app_tags_show', {'id': tag.id}) }}">show</a>
                        <a class="btn btn-outline-warning" href="{{ path('app_tags_edit', {'id': tag.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">No records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
